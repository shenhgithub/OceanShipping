<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@drawable/list_view_item_select_background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_list_item_route_start_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/start_icon"
            android:text="起点"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_default_text_size"/>

        <TextView
            android:id="@+id/transaction_list_item_route_end_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transaction_list_item_route_start_textView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/end_icon"
            android:text="终点"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_default_text_size"/>

        <TextView
            android:id="@+id/transaction_list_item_attribute_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transaction_list_item_route_end_textView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="相关属性"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_default_text_size_small"/>

        <TextView
            android:id="@+id/transaction_list_item_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/transaction_list_item_attribute_textView"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/transaction_list_item_attribute_textView"
            android:layout_toRightOf="@+id/transaction_list_item_attribute_textView"
            android:text="时间"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_default_text_size_small"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transaction_list_item_fee_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:drawableLeft="@mipmap/money_icon"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="信息费"
                android:textSize="@dimen/text_view_default_text_size_large"/>

            <TextView
                android:id="@+id/transaction_list_item_state_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="交易状态"
                android:textSize="@dimen/text_view_default_text_size_small"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>