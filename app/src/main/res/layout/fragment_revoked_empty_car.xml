<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_toolbar_top_margin"
        android:orientation="vertical"
        android:padding="@dimen/layout_default_horizontal_padding">

        <TableRow android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/image_default_large_size"
                android:layout_height="@dimen/image_default_large_size"
                android:layout_column="0"
                android:scaleType="center"
                android:src="@mipmap/start_large_icon"/>

            <TextView
                android:id="@+id/fragment_revoked_empty_car_start_route_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/layout_default_spacing"
                android:gravity="center_vertical"
                android:text="起点"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_default_text_size"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/layout_default_spacing"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/image_default_large_size"
                android:layout_height="@dimen/image_default_large_size"
                android:layout_column="0"
                android:scaleType="center"
                android:src="@mipmap/end_large_icon"/>

            <TextView
                android:id="@+id/fragment_revoked_empty_car_end_route_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/layout_default_spacing"
                android:gravity="center_vertical"
                android:text="终点"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_default_text_size"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/layout_default_spacing"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_revoked_empty_car_back_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/layout_default_spacing"
                    android:gravity="center"
                    android:text="回程车"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_view_default_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_revoked_empty_car_rebate_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/layout_default_spacing"
                    android:gravity="center"
                    android:text="优惠"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_view_default_text_size"/>
            </LinearLayout>

        </TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_revoked_empty_car_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_button_size"
            android:layout_marginTop="@dimen/layout_default_vertical_margin"
            android:text="@string/revoked_empty_car_button"
            android:textColor="@color/white"
            android:textSize="@dimen/button_default_text_size"
            android:textStyle="bold"/>
    </TableLayout>

</LinearLayout>